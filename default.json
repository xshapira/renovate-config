{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":preserveSemverRanges",
    ":enablePreCommit",
    ":maintainLockFilesWeekly",
    ":automergeStableNonMajor",
    ":automergePatch",
    ":automergeDigest",
    ":automergeTypes",
    ":semanticCommitsDisabled",
    "schedule:automergeNonOfficeHours",
    "schedule:nonOfficeHours"
  ],
  "requireConfig": "optional",
  "onboarding": false,
  "automergeStrategy": "merge-commit",
  "prHourlyLimit": 0,
  "prConcurrentLimit": 3,
  "rebaseWhen": "behind-base-branch",
  "git-submodules": {
    "enabled": true
  },
  "packageRules": [
    {
      "description": "Group Expo/React Native packages together with conservative updates",
      "matchManagers": [
        "pnpm",
        "bun"
      ],
      "matchPackagePatterns": [
        "^expo",
        "^@expo/",
        "^react-native",
        "^@react-native"
      ],
      "groupName": "expo-sdk",
      "rangeStrategy": "auto",
      "automerge": false,
      "minimumReleaseAge": "21 days",
      "schedule": [
        "after 10pm on sunday"
      ],
      "commitMessageTopic": "Expo SDK packages",
      "labels": [
        "expo",
        "dependency-update"
      ]
    },
    {
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "rangeStrategy": "bump",
      "commitMessageTopic": "{{depName}} from {{currentValue}}",
      "automerge": true,
      "labels": [
        "dependency-update"
      ]
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "major": {
        "rangeStrategy": "bump",
        "commitMessageTopic": "{{depName}} from {{currentValue}}",
        "automerge": true,
        "minimumReleaseAge": "7 days",
        "labels": [
          "major",
          "dependency-update"
        ]
      }
    }
  ]
}
