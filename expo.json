{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"description": "Renovate preset for Expo and React Native projects",
	"packageRules": [
		{
			"description": "Group Expo/React Native packages (manual review required)",
			"matchManagers": ["pnpm", "bun"],
			"matchPackagePatterns": [
				"^expo",
				"^@expo/",
				"^react-native",
				"^@react-native"
			],
			"groupName": "expo-rn",
			"rangeStrategy": "auto",
			"automerge": false,
			"minimumReleaseAge": "14 days",
			"schedule": ["after 10pm on sunday"],
			"commitMessageTopic": "Expo/RN packages",
			"labels": ["expo", "react-native", "dependency-update"]
		}
	]
}
